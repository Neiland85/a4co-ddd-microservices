# Configuración de ejemplo del proyecto A4CO DDD Microservices
# Copia este archivo a .env.local y ajusta los valores según tu entorno

# Configuración del proyecto
NODE_ENV=development
PROJECT_NAME=a4co-ddd-microservices

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/a4co_platform
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# NATS (Message Broker)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=a4co-cluster

# Redis (Cache y Sesiones)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (JSON Web Tokens)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ISSUER=a4co-auth-service
JWT_AUDIENCE=a4co-platform
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Observabilidad
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTLP_ENDPOINT=http://localhost:4318/v1/traces
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3333
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_ROUTING_API_KEY=demo-key

# Terraform
TERRAFORM_WORKSPACE=a4co-ddd-microservices
AWS_REGION=us-east-1

# Docker
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ELK Stack
ELASTICSEARCH_URL=http://localhost:9200
LOGSTASH_HOST=localhost
LOGSTASH_PORT=8080
KIBANA_URL=http://localhost:5601

# Servicios
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004
INVENTORY_SERVICE_URL=http://localhost:3005
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
LOYALTY_SERVICE_URL=http://localhost:3008
GEO_SERVICE_URL=http://localhost:3009
EVENT_SERVICE_URL=http://localhost:3010
CMS_SERVICE_URL=http://localhost:3011
CHAT_SERVICE_URL=http://localhost:3012
ARTISAN_SERVICE_URL=http://localhost:3013
ANALYTICS_SERVICE_URL=http://localhost:3014
ADMIN_SERVICE_URL=http://localhost:3015
