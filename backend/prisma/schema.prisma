generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Extensiones PostgreSQL requeridas por autenticación (uuid, hashing)
extension pgcrypto;
extension "uuid-ossp";

/// Usuario principal del sistema (combina Auth + User Service)
model User {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  name          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  sessions      Session[]
  refreshTokens RefreshToken[]
}

/// Sesiones activas (JWT/cookie)
model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

/// Tokens de refresco persistentes
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

/// Catálogo básico de productos (Product Service)
model Product {
  id        String      @id @default(uuid())
  name      String
  type      ProductType
  price     Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

/// Tipos de producto admitidos
enum ProductType {
  MADE_TO_ORDER
  SEASONAL
}

/// Vista ignorada utilizada en el servicio de auth original
view _UserCount {
  count Int
  @@ignore
}


