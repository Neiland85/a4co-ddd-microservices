{
  "name": "a4co-ddd-microservices",
  "version": "1.0.0",
  "description": "Monorepo DDD para microservicios construidos en NestJS + Next.js, diseñado para una plataforma colaborativa de venta y logística del pequeño comercio andaluz.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "docker-compose -f docker-compose.yml up",
    "dev:auth": "turbo run dev --filter=auth-service",
    "dev:user": "turbo run dev --filter=user-service",
    "dev:product": "turbo run dev --filter=product-service",
    "dev:order": "turbo run dev --filter=order-service",
    "dev:payment": "turbo run dev --filter=payment-service",
    "dev:frontend": "turbo run dev --filter=dashboard-web --filter=@a4co/design-system",
    "dev:backend": "turbo run dev --filter=...*-service",
    "build": "turbo run build --filter=!@a4co/observability --filter=!dashboard-web",
    "build:all": "turbo run build && pnpm design:sync",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:visual": "pnpm --filter @a4co/design-system test:visual",
    "test:visual:update": "pnpm --filter @a4co/design-system test:visual:update",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "lint:permissive": "ESLINT_USE_FLAT_CONFIG=false eslint --no-eslintrc . --config .eslintrc.permissive.json --ext .ts,.tsx,.js,.jsx",
    "lint:permissive:fix": "ESLINT_USE_FLAT_CONFIG=false eslint --no-eslintrc . --config .eslintrc.permissive.json --ext .ts,.tsx,.js,.jsx --fix",
    "lint:switch:permissive": "cp .eslintrc.permissive.json .eslintrc.json && echo 'ESLint configurado en modo PERMISIVO'",
    "lint:switch:strict": "cp eslint.config.js .eslintrc.json && echo 'ESLint configurado en modo ESTRICTO'",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore .next --ignore dist --ignore build",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --ignore .next --ignore dist --ignore build --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml,css,scss}\"",
    "format:diff": "prettier --list-different \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml,css,scss}\"",
    "type-check": "pnpm -r -F \"./packages/*\" run type-check",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rm -rf node_modules",
    "reinstall": "pnpm clean:all && pnpm install",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "start:dev": "concurrently \"pnpm run dev\"",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "storybook:dev": "pnpm --filter @a4co/design-system storybook",
    "design:sync": "node scripts/sync-design-tokens.js sync",
    "design:sync:watch": "node scripts/sync-design-tokens.js watch",
    "test:e2e": "jest --config test/jest-e2e.config.js",
    "coverage:merge": "echo 'Coverage merge temporarily disabled' || lcov-result-merger 'apps/**/coverage/lcov.info' 'packages/**/coverage/lcov.info' > coverage/lcov.info",
    "sonar-scanner": "echo 'SonarScanner temporarily disabled'",
    "quality:check": "echo 'Quality check temporarily disabled'",
    "security:validate-tar": "node scripts/validate-tar.js",
    "security:extract-tar": "node scripts/extract-tar-secure.js",
    "security:check": "echo 'Security checks: tar-fs mitigation active'",
    "security:lodash": "node scripts/lodash-security-mitigation.js",
    "test:security": "jest --config packages/shared-utils/jest.config.js --testPathPatterns=security",
    "security:ssrf": "node scripts/nextjs-ssrf-mitigation.js",
    "test:ssrf": "jest --config packages/shared-utils/jest.config.js --testPathPatterns=ssrf",
    "security:dev-server": "node scripts/dev-server-security-mitigation.js",
    "test:dev-security": "jest --config packages/shared-utils/jest.config.js --testPathPatterns=dev-server-security",
    "check:dev-security": "node scripts/check-dev-security.js"
  },
  "keywords": [
    "microservices",
    "ddd",
    "nestjs",
    "nextjs",
    "typescript",
    "monorepo",
    "andaluz",
    "ecommerce"
  ],
  "author": "Neil Muñoz Lago <neiland85@gmail.com>",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/context-zone": "^2.1.0",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/exporter-prometheus": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/instrumentation": "^0.205.0",
    "@opentelemetry/instrumentation-document-load": "^0.50.0",
    "@opentelemetry/instrumentation-express": "^0.54.0",
    "@opentelemetry/instrumentation-fetch": "^0.205.0",
    "@opentelemetry/instrumentation-grpc": "^0.205.0",
    "@opentelemetry/instrumentation-http": "^0.205.0",
    "@opentelemetry/instrumentation-koa": "^0.53.0",
    "@opentelemetry/instrumentation-user-interaction": "^0.50.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.205.0",
    "@opentelemetry/propagator-b3": "^2.1.0",
    "@opentelemetry/propagator-jaeger": "^2.1.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/sdk-trace-web": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "jest": "^30.2.0",
    "jscpd": "^4.0.5",
    "lcov-result-merger": "^5.0.1",
    "lint-staged": "^16.2.3",
    "madge": "^8.0.0",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-prune": "^0.10.3",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neiland85/a4co-ddd-microservices"
  }
}
