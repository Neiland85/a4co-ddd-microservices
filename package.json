{
  "name": "@a4co/root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:order": "turbo run start:dev --filter=@a4co/order-service",
    "dev:payment": "turbo run start:dev --filter=@a4co/payment-service",
    "dev:inventory": "turbo run start:dev --filter=@a4co/inventory-service",
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "build:all": "turbo run build",
    "test": "pnpm -r run test",
    "test:all": "turbo run test",
    "clean": "find . -type d -name dist -not -path './node_modules/*' -exec rm -rf {} +",
    "prisma:generate": "pnpm -r --if-present exec prisma generate",
    "prisma:migrate:order": "pnpm --filter @a4co/order-service exec prisma migrate dev",
    "prisma:migrate:payment": "pnpm --filter @a4co/payment-service exec prisma migrate dev",
    "prisma:migrate:inventory": "pnpm --filter @a4co/inventory-service exec prisma migrate dev",
    "prisma:studio:order": "pnpm --filter @a4co/order-service exec prisma studio",
    "prisma:studio:payment": "pnpm --filter @a4co/payment-service exec prisma studio",
    "prisma:studio:inventory": "pnpm --filter @a4co/inventory-service exec prisma studio",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "metrics": "curl http://localhost:3004/orders/metrics | grep saga_duration_seconds || true",
    "ci:prepare": "pnpm -w run clean && pnpm install && pnpm build",
    "ci:test": "pnpm run test && pnpm run lint",
    "update:dicts": "ts-node scripts/update-cspell-dicts.ts",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "pnpm": "^10.14.0",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/testing": "^11.0.0",
    "@prisma/client": "^6.19.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/micromatch": "^4.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "@eslint/js": "^9.15.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "json5": "^2.2.3",
    "micromatch": "^4.0.8",
    "morgan": "^1.10.1",
    "prisma": "^6.19.0",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "typescript-eslint": "^8.13.0"
  },
  "simple-git-hooks": {
    "post-commit": "pnpm run update:dicts"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.0",
      "tmp": "0.2.4",
      "js-yaml": ">=4.1.1"
    }
  },
  "packageManager": "pnpm@10.14.0"
}
