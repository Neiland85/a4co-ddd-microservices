{
  "name": "a4co-ddd-microservices",
  "version": "1.0.0",
  "description": "Monorepo DDD para microservicios construidos en NestJS + Next.js, diseñado para una plataforma colaborativa de venta y logística del pequeño comercio andaluz.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "docker-compose -f docker-compose.dev.yml up",
    "dev:frontend": "turbo run dev --filter=dashboard-web --filter=@a4co/design-system",
    "dev:backend": "turbo run dev --filter=...*-service",
    "build": "turbo run build",
    "build:all": "turbo run build && pnpm design:sync",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:visual": "pnpm --filter @a4co/design-system test:visual",
    "test:visual:update": "pnpm --filter @a4co/design-system test:visual:update",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:root": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:root:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:apps": "turbo run lint --filter=./apps/*",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rm -rf node_modules",
    "reinstall": "pnpm clean:all && pnpm install",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "start:dev": "concurrently \"pnpm run dev\"",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "storybook:dev": "pnpm --filter @a4co/design-system storybook",
    "design:sync": "node scripts/sync-design-tokens.js sync",
    "design:sync:watch": "node scripts/sync-design-tokens.js watch",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:report": "turbo run test:coverage && pnpm run coverage:merge",
    "coverage:merge": "echo 'Coverage merge temporarily disabled' || lcov-result-merger 'apps/**/coverage/lcov.info' 'packages/**/coverage/lcov.info' > coverage/lcov.info",
    "sonar-scanner": "echo 'SonarScanner temporarily disabled'",
    "quality:check": "echo 'Quality check temporarily disabled'",
    "start": "next start",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "pre-commit": "lint-staged",
    "prepare": "cd ../.. && husky install apps/web/.husky"
  },
  "keywords": [
    "microservices",
    "ddd",
    "nestjs",
    "nextjs",
    "typescript",
    "monorepo",
    "andaluz",
    "ecommerce"
  ],
