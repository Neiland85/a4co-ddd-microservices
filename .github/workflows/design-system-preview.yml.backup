name: Design System Preview

on:
  pull_request:
    paths:
      - 'packages/design-system/**'
      - '.github/workflows/design-system-preview.yml'
  push:
    branches:
      - main
      # Vercel deployment step removed. Historically we deployed Storybook previews
      # to Vercel here; the Vercel integration was deprecated for this repo.
      # If you need automatic previews, replace this step with your preferred
      # deployment action (Netlify, GitHub Pages, self-hosted, or another provider)
      # and update the comment step below accordingly.
      - name: Build Storybook
        run: pnpm --filter @a4co/design-system build-storybook

      - name: Deploy to Vercel
        id: deploy
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          working-directory: ./packages/design-system/storybook-static
          alias-domains: |
            pr-{{PR_NUMBER}}-design.a4co.vercel.app

      - name: Comment PR with preview URL
        if: github.event_name == 'pull_request'
        uses: actions/github-script@v7
        with:
          script: |
            const { data: comments } = await github.rest.issues.listComments({
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: context.issue.number,
            })

            const botComment = comments.find(comment => {
              return comment.user.type === 'Bot' && comment.body.includes('Design System Preview')
            })

            const output = `### ðŸŽ¨ Design System Preview

            Preview URL: ${{ steps.deploy.outputs.preview-url }}

            **Changed components:**
            \`\`\`
            ${{ steps.changed-files.outputs.all }}
            \`\`\`

            ---
            *This preview will be updated automatically with new commits.*`

            if (botComment) {
              github.rest.issues.updateComment({
                owner: context.repo.owner,
                repo: context.repo.repo,
                comment_id: botComment.id,
                body: output
              })
            } else {
              github.rest.issues.createComment({
                issue_number: context.issue.number,
                owner: context.repo.owner,
                repo: context.repo.repo,
                body: output
              })
            }

  chromatic:
    name: Visual Testing
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'

    steps:
      - name: Checkout code
        run:
        with:
          fetch-depth: 0

      - name: Setup Node.js
        run:
        with:
          node-version: '20'

      - name: Install pnpm
        run:
        with:
          version: 8

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Run Chromatic
        uses: chromaui/action@v1
        with:
          projectToken: ${{ secrets.CHROMATIC_PROJECT_TOKEN }}
          workingDir: packages/design-system
          buildScriptName: build-storybook
          exitZeroOnChanges: true
          autoAcceptChanges: main
