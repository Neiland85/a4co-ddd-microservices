{
  "compilerOptions": {
    /* üîß Compatibilidad moderna */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ‚öôÔ∏è interoperabilidad y m√≥dulos h√≠bridos */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,

    /* üß† Reglas de calidad y consistencia */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* üß© Decorators y metadata (NestJS + class-transformer) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* üì¶ Paths compartidos */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"],
      "@a4co/shared-utils": ["packages/shared-utils/src"],
      "@a4co/design-system": ["packages/design-system/src"],
      "@a4co/observability": ["packages/observability/src"],
      "@apps/*": ["apps/*/src"],
      "@shared/*": ["packages/*/src"]
    },

    /* üèóÔ∏è Output & build incremental */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* üö® Estrictos a nivel profesional */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*",
    "apps/**/*",
    "packages/**/*",
    "types/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "coverage",
    "**/test/**/*"
  ]
}

