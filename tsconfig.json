{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/jest.config.js",
    "**/jest.setup.js"
  ],
  "references": [
    {
      "path": "./apps/dashboard-web",
      "composite": true,
      "tsBuildInfoFile": "./dist/apps/dashboard-web/tsconfig.tsbuildinfo" // Archivo único para dashboard-web
    },
    {
      "path": "./libs",
      "composite": true,
      "tsBuildInfoFile": "./dist/libs/tsconfig.tsbuildinfo" // Archivo único para libs
    }
  ]
}