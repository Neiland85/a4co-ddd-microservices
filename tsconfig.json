{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": [
        "packages/shared-utils/*"
      ],
      "@apps/*": [
        "apps/*"
      ]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}