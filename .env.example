# =========================================
# ARTISAN PORTAL - Environment Variables
# =========================================

# -----------------------------------------
# Application
# -----------------------------------------
NODE_ENV=development
PORT=3000

# -----------------------------------------
# Database (PostgreSQL)
# -----------------------------------------
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://artisan_user:artisan_pass@localhost:5432/artisan_portal_db?schema=public"

# -----------------------------------------
# Authentication & Security
# -----------------------------------------
# JWT Secret - ¡CAMBIAR EN PRODUCCIÓN! (Generar con: openssl rand -base64 32)
JWT_SECRET="CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_OPENSSL_RAND_BASE64_32"
JWT_EXPIRES_IN="24h"

# Bcrypt rounds (10-12 recomendado para producción)
BCRYPT_ROUNDS=10

# -----------------------------------------
# API Configuration
# -----------------------------------------
API_PREFIX="api"
API_VERSION="v1"

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH="api/docs"

# -----------------------------------------
# CORS Configuration
# -----------------------------------------
CORS_ENABLED=true
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# -----------------------------------------
# Rate Limiting
# -----------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# -----------------------------------------
# Logging
# -----------------------------------------
LOG_LEVEL="debug"
LOG_PRETTY=true

# -----------------------------------------
# Email (Opcional - para futuras features)
# -----------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM="Portal Artesanos <noreply@artisan-portal.com>"

# -----------------------------------------
# File Upload (Opcional)
# -----------------------------------------
# MAX_FILE_SIZE=5242880
# UPLOAD_DEST=./uploads
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# -----------------------------------------
# External Services (Opcional)
# -----------------------------------------
# PAYMENT_GATEWAY_API_KEY=
# PAYMENT_GATEWAY_SECRET=
# MAPS_API_KEY=

# -----------------------------------------
# NATS Configuration (Event-Driven Architecture)
# -----------------------------------------
# NATS server URL for microservices communication
# Default: nats://localhost:4222
NATS_URL=nats://localhost:4222

# -----------------------------------------
# Payment Service Configuration
# -----------------------------------------
# Use simulated payment gateway for testing (true) or Stripe for production (false)
USE_SIMULATED_PAYMENT=true

# Success rate for simulated payment gateway (0.0 to 1.0)
# 0.9 means 90% of payments will succeed, 10% will fail (for testing saga compensations)
PAYMENT_SUCCESS_RATE=0.9

# Stripe API keys (only needed when USE_SIMULATED_PAYMENT=false)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
