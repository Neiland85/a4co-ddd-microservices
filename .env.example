# ============================================
# A4CO DDD Microservices - Environment Variables
# ============================================
# Copia este archivo como .env y configura los valores seg√∫n tu entorno

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=a4co_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/a4co_db

# ============================================
# NATS MESSAGE BROKER
# ============================================
NATS_URL=nats://localhost:4222

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_EXPIRATION=24h

# ============================================
# OBSERVABILITY (OpenTelemetry / Jaeger)
# ============================================
JAEGER_ENDPOINT=http://localhost:4318/v1/traces
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================
# SERVICE PORTS
# ============================================
PORT=3000
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
USER_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
TRANSPORTISTA_SERVICE_PORT=3005
PAYMENT_SERVICE_PORT=3006
INVENTORY_SERVICE_PORT=3007
NOTIFICATION_SERVICE_PORT=3008
LOYALTY_SERVICE_PORT=3009
GEO_SERVICE_PORT=3010

# ============================================
# PAYMENT INTEGRATION (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
