{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "../../..",
    "paths": {
      "@a4co/shared-utils": ["packages/shared-utils/dist"],
      "@a4co/shared-utils/*": ["packages/shared-utils/dist/*"],
      "@a4co/*": ["packages/*/src"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
