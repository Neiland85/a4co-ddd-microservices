{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "incremental": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}