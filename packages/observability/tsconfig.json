    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ]
  },
  "include": [
    "src/**/*",
    "src/global.d.ts"
