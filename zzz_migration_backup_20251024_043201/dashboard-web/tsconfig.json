{
  "compilerOptions": {
    // Next.js specific settings optimized for SWC
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ES2022"],
    "allowJs": true,
    "noEmit": false, // Asegúrate de que la emisión no esté deshabilitada
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // SWC optimizations
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
    // Relaxed TypeScript settings for faster compilation
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "composite": true, // Habilita la compilación incremental
    "outDir": "../../dist/apps/dashboard-web", // Directorio de salida separado
    "tsBuildInfoFile": "../../dist/apps/dashboard-web/tsconfig.tsbuildinfo", // Archivo .tsbuildinfo único
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/public/*": ["./public/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/app/*": ["./src/app/*"]
    },
    "types": [
      "node",
      "@types/node" // Eliminado "jest" si no es necesario
    ],
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
