# ==========================================
# A4CO Microservices - Production Environment
# ==========================================
# IMPORTANT: Copy to .env.production and fill with real values
# NEVER commit .env.production to git

# Node Environment
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:PASSWORD_HERE@postgres:5432/a4co_prod
POSTGRES_USER=a4co_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=a4co_prod

# JWT Authentication
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_RANDOM_STRING
JWT_EXPIRATION=3600
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# NATS JetStream
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=a4co-cluster

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME
REDIS_URL=redis://:CHANGE_ME@redis:6379

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Service Ports
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3006
INVENTORY_SERVICE_PORT=3007
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3003

# Service URLs (internal)
AUTH_SERVICE_URL=http://auth-service:3001
PRODUCT_SERVICE_URL=http://product-service:3003
ORDER_SERVICE_URL=http://order-service:3004
USER_SERVICE_URL=http://user-service:3003

# Version/Tag
VERSION=1.0.0
