// Prisma schema for Artisan Portal
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  productsAsArtisan Product[] @relation("ArtisanProducts")
  orders            Order[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  sku         String?  @unique
  brand       String?
  price       Float
  unitPrice   Float?
  currency    String   @default("EUR")
  stock       Int      @default(0)
  currentStock Int     @default(0)
  reservedStock Int    @default(0)
  minimumStock Int     @default(0)
  maximumStock Int?
  category    String
  images      String[]
  isActive    Boolean  @default(true)
  artisanId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  artisan     User         @relation("ArtisanProducts", fields: [artisanId], references: [id])
  orderItems  OrderItem[]
  reservations StockReservation[]
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  status        OrderStatus @default(PENDING)
  totalAmount   Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]
  reservations  StockReservation[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

model StockReservation {
  id          String   @id @default(cuid())
  productId   String
  orderId     String
  customerId  String?
  quantity    Int
  status      String   @default("active")
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([productId, orderId])
}

enum UserRole {
  CUSTOMER
  ARTISAN
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ChainOfCustodyEventType {
  EVIDENCE_UPLOADED
  EVIDENCE_HASHED
  EVIDENCE_ACCESSED
  EVIDENCE_EXPORTED
  REPORT_GENERATED
}

model ChainOfCustodyEvent {
  id        String                  @id @default(uuid())
  eventType ChainOfCustodyEventType
  userId    String
  metadata  Json?
  timestamp DateTime                @default(now())

  @@map("chain_of_custody_events")
}
