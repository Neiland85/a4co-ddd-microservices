# A4CO Platform - Docker Compose Development Environment
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:a4co_local_dev@localhost:5432/a4co_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=a4co_local_dev
POSTGRES_DB=a4co_platform

# Message Broker (NATS)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=a4co-cluster

# Cache (Redis)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=a4co_dev_jwt_secret_key_change_in_production
JWT_ISSUER=a4co-auth-service
JWT_AUDIENCE=a4co-platform
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3006

# External Services (Stripe for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=info
LOG_FORMAT=json

# Development
NODE_ENV=development
DEBUG=*

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3006