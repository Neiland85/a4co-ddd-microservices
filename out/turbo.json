{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/tsconfig.json",
    "**/package.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.js",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "lib/**"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ],
      "outputs": [
        "prisma/generated/**"
      ]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": [
        "db:generate"
      ]
    },
    "db:push": {
      "cache": false,
      "dependsOn": [
        "db:generate"
      ]
    },
    "deploy": {
      "cache": false,
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "env": [
        "NODE_ENV",
        "VERCEL_*"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "persistent": true
    },
    "format": {
      "cache": false,
      "inputs": [
        "src/**",
        "*.js",
        "*.ts",
        "*.tsx",
        "*.json",
        "*.md"
      ],
      "outputs": []
    },
    "format:check": {
      "inputs": [
        "src/**",
        "*.js",
        "*.ts",
        "*.tsx",
        "*.json",
        "*.md"
      ],
      "outputs": []
    },
    "lint": {
      "inputs": [
        "src/**",
        "*.js",
        "*.ts",
        "*.tsx",
        ".eslintrc*",
        "package.json"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "lint:fix": {
      "cache": false,
      "inputs": [
        "src/**",
        "*.js",
        "*.ts",
        "*.tsx",
        ".eslintrc*",
        "package.json"
      ],
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": [
        "build"
      ],
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NODE_ENV"
      ],
      "inputs": [
        "src/**",
        "test/**",
        "jest.config.*",
        "package.json"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "test/**",
        "jest.config.*"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "*.ts",
        "*.tsx",
        "tsconfig.json"
      ],
      "outputs": []
    }
  },
  "remoteCache": {
    "enabled": true
  }
}