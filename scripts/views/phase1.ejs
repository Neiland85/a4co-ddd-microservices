<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - A4CO Monitoring</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <a href="/" class="text-blue-600 hover:text-blue-800 mr-4">‚Üê Dashboard</a>
                    <h1 class="text-2xl font-bold text-gray-900">üéØ Phase 1 - Internal Beta</h1>
                </div>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <% if (data['phase1-rollout-config']) { %>
        <!-- Rollout Configuration -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Configuraci√≥n del Rollout</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Fase</h3>
                    <p class="text-2xl font-bold text-gray-900"><%= data['phase1-rollout-config'].phase %></p>
                </div>
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Estado</h3>
                    <p class="text-2xl font-bold <%= data['phase1-rollout-config'].status.includes('25') ? 'text-green-600' : 'text-blue-600' %>">
                        <%= data['phase1-rollout-config'].status %>
                    </p>
                </div>
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Audiencia</h3>
                    <p class="text-2xl font-bold text-purple-600">
                        <%= data['phase1-rollout-config'].currentRollout.audience %>
                    </p>
                </div>
            </div>
        </div>
        <% } %>

        <% if (data['phase1-final-report']) { %>
        <!-- Final Assessment -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Evaluaci√≥n Final</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Status General</h3>
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= data['phase1-final-report'].overall_assessment.status === 'GREEN' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= data['phase1-final-report'].overall_assessment.status %>
                    </span>
                </div>
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Tasa de √âxito</h3>
                    <p class="text-2xl font-bold text-gray-900"><%= data['phase1-final-report'].overall_assessment.success_rate %></p>
                </div>
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Confianza</h3>
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= data['phase1-final-report'].overall_assessment.confidence_level === 'HIGH' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= data['phase1-final-report'].overall_assessment.confidence_level %>
                    </span>
                </div>
                <div class="text-center">
                    <h3 class="font-medium text-gray-500">Ready Phase 2</h3>
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-medium <%= data['phase1-final-report'].overall_assessment.readiness_for_phase2 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= data['phase1-final-report'].overall_assessment.readiness_for_phase2 ? '‚úÖ S√ç' : '‚ùå NO' %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Key Insights -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Insights Clave</h2>
            <ul class="space-y-2">
                <% data['phase1-final-report'].key_insights.forEach(insight => { %>
                <li class="flex items-start">
                    <span class="text-blue-500 mr-2">üí°</span>
                    <span class="text-gray-700"><%= insight %></span>
                </li>
                <% }); %>
            </ul>
        </div>

        <!-- Final Recommendation -->
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Recomendaci√≥n Final</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h3 class="font-medium text-gray-900 mb-2">Decisi√≥n</h3>
                    <span class="inline-block px-4 py-2 rounded-lg text-lg font-bold <%= data['phase1-final-report'].final_recommendation.decision === 'PROCEED_TO_PHASE2' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= data['phase1-final-report'].final_recommendation.decision.replace(/_/g, ' ') %>
                    </span>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900 mb-2">Rationale</h3>
                    <p class="text-gray-700"><%= data['phase1-final-report'].final_recommendation.rationale %></p>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900 mb-2">Rollout % Recomendado</h3>
                    <p class="text-2xl font-bold text-purple-600"><%= data['phase1-final-report'].final_recommendation.rollout_percentage %></p>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900 mb-2">Timeline</h3>
                    <p class="text-lg font-semibold text-blue-600"><%= data['phase1-final-report'].final_recommendation.timeline %></p>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Next Steps -->
        <% if (data['phase1-final-report'] && data['phase1-final-report'].next_steps) { %>
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Pr√≥ximos Pasos</h2>
            <div class="space-y-3">
                <% data['phase1-final-report'].next_steps.forEach(step => { %>
                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                    <span class="text-green-500 mr-3">‚úÖ</span>
                    <span class="text-gray-700"><%= step %></span>
                </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- Raw Data -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Datos Completos de Phase 1</h3>
            <pre class="bg-gray-50 p-4 rounded text-sm overflow-x-auto max-h-96"><code><%= JSON.stringify(data, null, 2) %></code></pre>
        </div>
    </div>
</body>
</html>