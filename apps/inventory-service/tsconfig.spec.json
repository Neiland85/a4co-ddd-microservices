{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@a4co/shared-utils": ["../../packages/shared-utils/src/index"],
      "@a4co/shared-utils/*": ["../../packages/shared-utils/src/*"],
      "@a4co/observability": ["../../packages/observability/src/index"],
      "@a4co/observability/*": ["../../packages/observability/src/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "**/*.spec.ts", "**/*.test.ts"]
}
