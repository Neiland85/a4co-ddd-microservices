# Configuración de ejemplo para auth-service
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración del servicio
PORT=3001
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0
NODE_ENV=development

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/auth_service
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT (JSON Web Tokens)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ISSUER=a4co-auth-service
JWT_AUDIENCE=a4co-platform
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Seguridad
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_ENABLED=true

# Redis (para sesiones)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Observabilidad
LOG_LEVEL=info
LOG_FORMAT=json
JAEGER_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=9091

# NATS (Message Broker)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=a4co-cluster

# Servicios externos
USER_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3007
