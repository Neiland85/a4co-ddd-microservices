{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@a4co/shared-utils": [
        "../../packages/shared-utils/dist"
      ],
      "@a4co/shared-utils/*": [
        "../../packages/shared-utils/dist/*"
      ],
      "@a4co/observability": [
        "../../packages/observability/dist"
      ],
      "@a4co/observability/*": [
        "../../packages/observability/dist/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
