{
  "name": "@a4co/order-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "prebuild": "pnpm --filter @a4co/shared-utils --filter @a4co/shared-events --filter @a4co/observability run build",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --rule \"@typescript-eslint/no-explicit-any:warn\"",
    "test": "jest --config jest.config.cjs --passWithNoTests",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:cov": "jest --config jest.config.cjs --coverage",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@a4co/domain": "workspace:*",
    "@a4co/observability": "workspace:*",
    "@a4co/shared-events": "workspace:*",
    "@a4co/shared-utils": "workspace:*",
    "@a4co/domain-order": "workspace:*",
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/microservices": "^11.1.13",
    "@nestjs/platform-express": "^11.1.8",
    "@prisma/client": "7.4.0",
    "nats": "^2.29.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "eslint": "^9.0.0",
    "jest": "^30.2.0",
    "prisma": "6.19.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.3"
  },
  "Transform": "AWS::Serverless-2016-10-31",
  "Resources": {
    "Api": {
      "Type": "AWS::Serverless::Api",
      "Properties": {
        "Name": {
          "Fn::Sub": [
            "${ResourceName} From Stack ${AWS::StackName}",
            {
              "ResourceName": "Api"
            }
          ]
        },
        "StageName": "Prod",
        "DefinitionBody": {
          "openapi": "3.0",
          "info": {},
          "paths": {
            "/": {
              "get": {
                "responses": {}
              }
            }
          }
        },
        "EndpointConfiguration": "REGIONAL",
        "TracingEnabled": true,
        "Auth": {
          "DefaultAuthorizer": "AWS_IAM"
        },
        "Cors": {
          "MaxAge": 5
        }
      }
    },
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-myawsbucket-${AWS::AccountId}"
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": "alias/aws/s3"
              }
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "BucketBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "Bucket"
        },
        "PolicyDocument": {
          "Id": "RequireEncryptionInTransit",
          "Version": "2012-10-17",
          "Statement": [
            {
              "Principal": "*",
              "Action": "*",
              "Effect": "Deny",
              "Resource": [
                {
                  "Fn::GetAtt": [
                    "Bucket",
                    "Arn"
                  ]
                },
                {
                  "Fn::Sub": "${Bucket.Arn}/*"
                }
              ],
              "Condition": {
                "Bool": {
                  "aws:SecureTransport": "false"
                }
              }
            }
          ]
        }
      }
    }
  }
}
