{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts", "tests/**/*.ts", "src/**/*.ts", "*.test.ts", "*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
