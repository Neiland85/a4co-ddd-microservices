{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@a4co/shared-utils": [
        "../../packages/shared-utils/dist"
      ],
      "@a4co/shared-utils/*": [
        "../../packages/shared-utils/dist/*"
      ],
      "@a4co/observability": [
        "../../packages/observability/dist"
      ],
      "@a4co/observability/*": [
        "../../packages/observability/dist/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/__tests__/**",
    "tests/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/application/__tests__/**",
    "src/domain/__tests__/**",
    "src/infrastructure/repositories/**",
    "src/infrastructure/outbox/**",
    "src/infrastructure/event-bus/**",
    "src/application/services/**/*.tx.service.ts"
  ]
}
