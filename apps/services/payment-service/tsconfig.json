{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@a4co/shared-utils/*": [
        "../../../packages/shared-utils/dist/*"
      ],
      "@a4co/domain-payment": [
        "../../../../packages/domain/payment/dist"
      ],
      "@a4co/domain-payment/*": [
        "../../../../packages/domain/payment/dist/*"
      ],
      "@a4co/shared-utils": [
        "../../../packages/shared-utils/dist"
      ],
      "@a4co/observability": [
        "../../../packages/observability/dist"
      ],
      "@a4co/observability/*": [
        "../../../packages/observability/dist/*"
      ]
    },
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/**",
    "src/__tests__/**",
    "src/domain/**",
    "src/infrastructure/__tests__/**",
    "src/infrastructure/prisma/**",
    "src/infrastructure/repositories/prisma-payment.repository.ts",
    "src/payment.controller.spec.ts",
    "src/payment.service.spec.ts"
  ]
}
