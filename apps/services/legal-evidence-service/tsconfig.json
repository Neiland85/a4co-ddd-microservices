{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test/**", "src/**/__tests__", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
