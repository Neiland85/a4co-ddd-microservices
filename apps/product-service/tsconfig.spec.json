{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "**/*.ts",
    "tests/**/*.ts",
    "*.test.ts",
    "*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
