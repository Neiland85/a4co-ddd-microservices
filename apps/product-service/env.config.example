# Configuración de ejemplo para product-service
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración del servicio
PORT=3002
SERVICE_NAME=product-service
SERVICE_VERSION=1.0.0
NODE_ENV=development

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/products
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# NATS (Message Broker)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=a4co-cluster

# Observabilidad
LOG_LEVEL=info
LOG_FORMAT=json
JAEGER_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=9092

# Servicios externos
INVENTORY_SERVICE_URL=http://localhost:3005
USER_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Configuración de productos
PRODUCT_CACHE_TTL=3600
PRODUCT_SEARCH_LIMIT=50
PRODUCT_IMAGE_BASE_URL=http://localhost:3002/images
