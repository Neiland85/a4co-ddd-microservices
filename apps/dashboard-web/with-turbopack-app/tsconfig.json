{
  "compilerOptions": {
    // Turbopack + SWC optimized settings
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    // Module resolution optimized for Turbopack
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    // SWC optimizations
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
    // Path mapping for clean imports
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/lib/*": [
        "./app/lib/*"
      ],
      "@/utils/*": [
        "./app/utils/*"
      ],
      "@/types/*": [
        "./app/types/*"
      ],
      "@/styles/*": [
        "./app/styles/*"
      ]
    },
    // Relaxed TypeScript settings for faster compilation
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    // Import/Export
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    // Next.js 15 plugins
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}