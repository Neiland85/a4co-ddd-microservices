# Gateway Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs (As per requirements: orders:3002, payments:3003, inventory:3004)
# For Docker: use service names (order-service, payment-service, inventory-service)
# For local dev: use localhost
AUTH_SERVICE_URL=http://localhost:3001
PRODUCTS_SERVICE_URL=http://localhost:3002
ORDERS_SERVICE_URL=http://order-service:3002
INVENTORY_SERVICE_URL=http://inventory-service:3004
PAYMENTS_SERVICE_URL=http://payment-service:3003
SAGAS_SERVICE_URL=http://localhost:3006

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_CHANGE_ORIGIN=true

# Rate Limiting (100 requests per minute)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS (Allow dashboard-client and local dev)
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Logging
LOG_LEVEL=debug
