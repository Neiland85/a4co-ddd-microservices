# Configuración de ejemplo para user-service
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración del servicio
PORT=3003
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
NODE_ENV=development

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/users
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# NATS (Message Broker)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=a4co-cluster

# Observabilidad
LOG_LEVEL=info
LOG_FORMAT=json
JAEGER_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=9093

# Servicios externos
AUTH_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3007
LOYALTY_SERVICE_URL=http://localhost:3008

# Configuración de usuarios
USER_PASSWORD_MIN_LENGTH=8
USER_EMAIL_VERIFICATION_REQUIRED=true
USER_PROFILE_IMAGE_BASE_URL=http://localhost:3003/profiles
