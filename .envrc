# Configuración automática del entorno para a4co-ddd-microservices
# Este archivo se ejecuta automáticamente cuando entras al directorio

# Variables de entorno del proyecto
export PROJECT_ROOT="$(pwd)"
export PROJECT_NAME="a4co-ddd-microservices"
export NODE_ENV="development"

# Configuración de Terraform
export TERRAFORM_WORKSPACE="a4co-ddd-microservices"
export AWS_REGION="us-east-1"

# PATH para herramientas del proyecto
export PATH="$PROJECT_ROOT/node_modules/.bin:$PATH"
export PATH="$PROJECT_ROOT/scripts:$PATH"

# Alias útiles
alias tf="terraform"
alias tfp="terraform plan"
alias tfa="terraform apply"
alias status="echo '📍 Proyecto: $PROJECT_NAME en $(pwd)'"

echo "🚀 Entorno configurado para $PROJECT_NAME"

